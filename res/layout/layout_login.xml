<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9e5f0"
    android:orientation="vertical"
    android:padding="25dp" >

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/login_background"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/phoneNum"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:background="@android:color/transparent"
            android:hint="请输入你的账号"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/login_horizontal_separator" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:background="@android:color/transparent"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="16.0sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bnLogin"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10.0dip"
        android:background="@drawable/common_button_big_green_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <Button
        android:id="@+id/bnRegeister"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_button_big_blue_bg"
        android:text="新用户注册"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

</LinearLayout>